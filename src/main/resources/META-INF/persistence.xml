<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="audioPU" transaction-type="RESOURCE_LOCAL">
        <!-- провайдер JPA -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- перечислите @Entity-классы или подключите автоматическое обнаружение -->
        <class>com.anpilogoff.dao.entity.Artist</class>
        <class>com.anpilogoff.dao.entity.Album</class>
        <class>com.anpilogoff.dao.entity.Track</class>

        <properties>
            <!-- JDBC -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/audioPU"/>
            <property name="jakarta.persistence.jdbc.user"     value="jpa"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>
            <property name="jakarta.persistence.jdbc.driver"   value="com.mysql.cj.jdbc.Driver"/>

            <!-- Диалект Hibernate 6 для MySQL 8 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <!-- Автоматическое управление схемой: create | update | validate | none -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Дополнительно -->
            <property name="hibernate.show_sql"    value="true"/>
            <property name="hibernate.format_sql"  value="true"/>
        </properties>
    </persistence-unit>
</persistence>
